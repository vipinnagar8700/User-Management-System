<div class="container jumbotron">
    <form action="/admin/insertPermission" method="POST">
        <div class="card">
            <h2 style="text-align: center; padding-top: 2%;"> Add Permission</h2>
            <div class="form-group">
                <label for="validationServer02">Role Name</label>
                <input type="name" class="form-control" name="permission" id="validationServer02" aria-describedby="Help"
                    placeholder="Enter New Role Name" required>
            </div>
            <div class="form-group">
                <label for="inputState">Status</label>
                <select id="inputState" name="permission_Status" class="form-control">
