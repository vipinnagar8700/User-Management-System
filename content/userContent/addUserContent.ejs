<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/listUser"><i class="fa fa-home">Home</i></a></li>
        <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-user">Add User</i></li>
    </ol>
</nav>
<div class="container py-3">
    <!-- form card login -->
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0" style="text-align:center">Add User Data</h3>
        </div>
        <div class="card-body">
            <form action="/insertUser" method="POST">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="form6Example1">UserName</label>
                            <input type="text" id="form6Example1" name="userName" class="form-control" required />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="form6Example2">User Role</label>
                            <select id="role_id" name="role_id" class="form-control" required>
                                <option selected hidden disabled>Choose User Role</option>
                                <% for (var i=0; i < data.length; i++) { %>
                                <option value="<%= data[i].ID %>" > <%= data[i].RoleName %></option>
                                <% } %>
                            </select>
                            <br>
                        </div>
                    </div>
                </div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form6Example5">Email</label>
                    <input type="email" id="form6Example5" name="Email" class="form-control"  required/>
                </div>

                <!-- Password input -->
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label" for="form3Example4">Password</label>
                            <input type="password" id="form3Example4" class="form-control" required />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <label for="inputState">Status</label>
                            <select id="inputState" name="Status" class="form-control" required>
                                <option selected hidden disabled>Choose status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                            <br>
                            <!-- Submit button -->
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary ">Submit</button>

            </form>
        </div>
        <!--/card-block-->
    </div><!-- /form card login -->
</div>